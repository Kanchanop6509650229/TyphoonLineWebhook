# ใจดี Chatbot - Configuration Template
# Copy this file to .env and fill in your actual values

# ====================
# LINE API Credentials
# ====================
# Get these from LINE Developer Console: https://developers.line.biz/console/
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# =======================
# Together AI Configuration
# =======================
# Get your API key from: https://api.together.xyz/
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=scb10x/scb10x-llama3-1-typhoon2-60256

# =======================
# Redis Configuration
# =======================
# For local development, use localhost
# For Docker, use 'redis' (service name in docker-compose)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =======================
# MySQL Configuration
# =======================
# For local development, use localhost
# For Docker, use 'db' (service name in docker-compose)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_ROOT_PASSWORD=change_this_password
MYSQL_PASSWORD=change_this_password
MYSQL_DB=chatbot

# =======================
# Docker Compose Settings
# =======================
MYSQL_ROOT_PASSWORD=change_this_password

# =======================
# Application Settings
# =======================
# Set to production when deploying
ENVIRONMENT=development
# Log level options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Path to JSON file with risk keywords (optional)
RISK_KEYWORDS_PATH=risk_keywords.json
# Webhook security key for form submissions
FORM_WEBHOOK_KEY=your_webhook_key_here
